{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "noEmitOnError": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "react-three-fiber": ["./"]
    }
  },
  "include": ["src", "tests"]
}
