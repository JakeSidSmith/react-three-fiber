{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "isolatedModules": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./src",
    "paths": {
      "react-three-fiber": ["./"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["./src", "tests"],
  "exclude": ["./node_modules/**/*"]
}
